pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

function _init()
  x = 32
  y = 64
  frame = 0
  from = 32
  to = 96

end

function _update60()
  frame += 1
  if flr(x) == 32 then
    start = frame
    from = 32
    to = 96
  elseif flr(x) == 96 then
    start = frame
    from = 96
    to = 32
  end
  x = linear(
    frame - start,
    from,
    to,
    60
  )
end

function linear(t, b, c, d)
  return c * t / d + b
end

function _draw()
  cls(0)
  line(x-4, y, x+4, y, 8)
  line(x, y-4, x, y+4, 8)
  circ(x, y, 4, 8)
  print(x)
end

function lerp(from, to, perc)
  return (1-perc)*to + perc*from;
end

